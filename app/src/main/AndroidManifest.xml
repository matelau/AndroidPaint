<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utah.cs4962.paint" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:name=".PaintApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PaintActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PaletteActivity"
            android:label="@string/title_activity_paltte"
            android:parentActivityName=".PaintActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.utah.cs4962.paint.PaintActivity" />
        </activity>
    </application>

</manifest>
